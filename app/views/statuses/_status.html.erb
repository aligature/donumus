<tr>
   <% if status.id %>
      <td><%= link_to image_tag('delete.png', alt: "delete", height: 16), { action: :destroy, id: status.id }, method: :delete,
         data: { confirm: 'do you really want to delete this?' } %></td>
   <% else %>
      <td></td>
   <% end %>
   <td><%= Status.label(status.status, include_available = true) %></td>
   <td><%= status.note %></td>
   <td class="nowrap"><%= status.added_by_user_id? ? status.added_by_user.name : "unknown" %></td>
   <td class="nowrap"><%= local_time_ago(status.updated_at) %></td>

</tr>
